# EditorConfig file: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 80

[*.{Dockerfile,dart,js,json,jsx,scss,ts,tsx,vim,yaml,yml,hcl}]
indent_size = 2

[*.{html}]
max_line_length = 120
