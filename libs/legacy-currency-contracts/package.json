{
  "name": "@jarvis-network/legacy-currency-contracts",
  "version": "1.0.0",
  "scripts": {
    "format": "NODE_OPTIONS=--max-old-space-size=8192 prettier --write .",
    "format:sol": "prettier --write './contracts/**/*.sol'",
    "build": "yarn build:solidity && yarn build:tsc && yarn build:nx-necessary",
    "build:solidity": "hardhat compile",
    "build:tsc": "tsc -p ./tsconfig.lib.json",
    "build:nx-necessary": "cp ./package.json ./dist/",
    "compile": "hardhat compile",
    "migrate-maastricht": "MIGRATION_TYPE=maastricht hardhat test ./test/correct-migration.js",
    "test": "yarn test:fixed-rate &&  test:fixed-rate-oclr",
    "test:fixed-rate": "MIGRATION_TYPE=all NODE_OPTIONS==--max-old-space-size=8192 hardhat test ./test/fixed-rate/FixedRateCurrency.js",
    "test:fixed-rate-oclr": "MIGRATION_TYPE=atomic_swap NODE_OPTIONS==--max-old-space-size=8192 hardhat test ./test/fixed-rate/OCLR.js",
    "deploy:fixed-rate": "hardhat deploy_fixed_rate_currency",
    "start:local-fork": "../../scripts/local-fork.sh",
    "verify": "hardhat verify"
  },
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "4.1.0",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": "^0.7.16"
  }
}
