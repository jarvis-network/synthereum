{
  "name": "@jarvis-network/synthereum-contracts",
  "version": "1.0.0",
  "description": "",
  "files": [
    "dist"
  ],
  "types": "dist",
  "scripts": {
    "clean": "git clean -fdx -e .env -e node_modules -- .",
    "format": "prettier --write .",
    "format:sol": "prettier --write './contracts/**/*.sol'",
    "start": "yarn build",
    "watch:tsc": "tsc -p ./tsconfig.json -w --preserveWatchOutput",
    "build": "yarn build:scripts && yarn build:solidity && yarn build:typechain && yarn build:typechain-index && yarn build:tsc",
    "build:scripts": "tsc -p ./scripts/tsconfig.json",
    "build:solidity": "truffle compile",
    "build:typechain": "typechain --target web3-v1 --outDir ./src/contracts/typechain './build/contracts/*.json' | { head -n 2; tail -n1; }",
    "build:typechain-index": "node ./dist/scripts/generate_typechain_header.js ./src/contracts",
    "build:tsc": "tsc -p ./tsconfig.json",
    "truffle:kovan": "truffle console --network kovan",
    "migrate-infrastructure:kovan": "MIGRATION_TYPE=infrastructure hardhat test ./test/correct-migration.js --network kovan",
    "migrate-derivative-version:kovan": "MIGRATION_TYPE=derivativeVersions hardhat test ./test/correct-migration.js --network kovan",
    "migrate-pool-version:kovan": "MIGRATION_TYPE=poolVersions hardhat test ./test/correct-migration.js --network kovan",
    "migrate-price-feed:kovan": "MIGRATION_TYPE=priceFeed hardhat test ./test/correct-migration.js --network kovan",
    "migrate-all:kovan": "hardhat test ./test/correct-migration.js --network kovan",
    "add-pool-and-derivative:kovan": "MIGRATION_TYPE=pool-and-derivative hardhat test ./test/correct-migration.js --network kovan",
    "add-only-pool:kovan": "MIGRATION_TYPE=only-pool hardhat test ./test/correct-migration.js --network kovan",
    "add-only-derivative:kovan": "MIGRATION_TYPE=only-derivative hardhat test ./test/correct-migration.js --network kovan",
    "migrate-infrastructure:rinkeby": "MIGRATION_TYPE=infrastructure hardhat test ./test/correct-migration.js --network rinkeby",
    "migrate-derivative-version:rinkeby": "MIGRATION_TYPE=derivativeVersions hardhat test ./test/correct-migration.js --network rinkeby",
    "migrate-pool-version:rinkeby": "MIGRATION_TYPE=poolVersions hardhat test ./test/correct-migration.js --network rinkeby",
    "migrate-price-feed:rinkeby": "MIGRATION_TYPE=priceFeed hardhat test ./test/correct-migration.js --network rinkeby",
    "migrate-all:rinkeby": "hardhat test ./test/correct-migration.js --network rinkeby",
    "add-pool-and-derivative:rinkeby": "MIGRATION_TYPE=pool-and-derivative hardhat test ./test/correct-migration.js --network rinkeby",
    "add-only-pool:rinkeby": "MIGRATION_TYPE=only-pool hardhat test ./test/correct-migration.js --network rinkeby",
    "add-only-derivative:rinkeby": "MIGRATION_TYPE=only-derivative hardhat test ./test/correct-migration.js --network rinkeby",
    "migrate-infrastructure:mainnet": "MIGRATION_TYPE=infrastructure hardhat test ./test/correct-migration.js --network mainnet",
    "migrate-derivative-version:mainnet": "MIGRATION_TYPE=derivativeVersions hardhat test ./test/correct-migration.js --network mainnet",
    "migrate-pool-version:mainnet": "MIGRATION_TYPE=poolVersions hardhat test ./test/correct-migration.js --network mainnet",
    "migrate-price-feed:mainnet": "MIGRATION_TYPE=priceFeed hardhat test ./test/correct-migration.js --network mainnet",
    "migrate-all:mainnet": "hardhat test ./test/correct-migration.js --network mainnet",
    "add-pool-and-derivative:mainnet": "MIGRATION_TYPE=pool-and-derivative hardhat test ./test/correct-migration.js --network mainnet",
    "add-only-pool:mainnet": "MIGRATION_TYPE=only-pool hardhat test ./test/correct-migration.js --network mainnet",
    "add-only-derivative:mainnet": "MIGRATION_TYPE=only-derivative hardhat test ./test/correct-migration.js --network mainnet",
    "test": "hardhat test",
    "coverage": "hardhat coverage"
  },
  "author": "Alessandro Bergamaschi",
  "license": "ISC",
  "dependencies": {
    "@jarvis-network/uma-common": "0.3.11",
    "@jarvis-network/uma-core": "0.3.11",
    "@jarvis-network/web3-utils": "1.0.0",
    "@openzeppelin/contracts": "3.3.0",
    "web3": "^1.3.4"
  },
  "devDependencies": {
    "@typechain/web3-v1": "^1.0.0",
    "ethers": "^5.0.26",
    "ganache-cli": "^6.12.1",
    "ganache-time-traveler": "^1.0.15",
    "secp256k1": "^4.0.2",
    "truffle": "5.1.49",
    "truffle-assertions": "^0.9.2",
    "typechain": "^4.0.1"
  }
}
