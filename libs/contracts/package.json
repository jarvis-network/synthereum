{
  "name": "@jarvis-network/synthereum-contracts",
  "version": "1.0.0",
  "description": "",
  "files": [
    "dist"
  ],
  "types": "dist",
  "scripts": {
    "clean": "git clean -fdx -e .env -e node_modules -- .",
    "format": "prettier --write .",
    "format:sol": "prettier --write './contracts/**/*.sol'",
    "start": "yarn build",
    "watch:tsc": "tsc -p ./tsconfig.json -w --preserveWatchOutput",
    "build": "yarn build:solidity && yarn build:typechain && yarn build:typechain-index && yarn build:tsc",
    "build:solidity": "truffle compile",
    "build:typechain": "typechain --target web3-v1 --outDir ./src/contracts/typechain './build/contracts/*.json' | { head -n 2; tail -n1; }",
    "build:typechain-index": "node ../sol2ts-code-gen/cli ./src/contracts",
    "build:tsc": "tsc -p ./tsconfig.json",
    "migrate-finder": "MIGRATION_TYPE=deploy_finder hardhat test ./test/correct-migration.js",
    "migrate-deployer": "MIGRATION_TYPE=deploy_deployer hardhat test ./test/correct-migration.js",
    "migrate-pool-registry": "MIGRATION_TYPE=deploy_pool_registry hardhat test ./test/correct-migration.js",
    "migrate-factory-versioning": "MIGRATION_TYPE=deploy_factory_versioning hardhat test ./test/correct-migration.js",
    "migrate-manager": "MIGRATION_TYPE=deploy_manager hardhat test ./test/correct-migration.js",
    "migrate-derivative-version": "MIGRATION_TYPE=deploy_derivative_versions hardhat test ./test/correct-migration.js",
    "migrate-pool-version": "MIGRATION_TYPE=deploy_pool_versions hardhat test ./test/correct-migration.js",
    "migrate-price-feed": "MIGRATION_TYPE=deploy_price_feed hardhat test ./test/correct-migration.js",
    "migrate-all": "MIGRATION_TYPE=all hardhat test ./test/correct-migration.js",
    "add-pool-and-derivative": "MIGRATION_TYPE=add_pool_and_derivative hardhat test ./test/correct-migration.js",
    "add-only-pool": "MIGRATION_TYPE=add_only_pool hardhat test ./test/correct-migration.js",
    "add-only-derivative": "MIGRATION_TYPE=add_only_derivative hardhat test ./test/correct-migration.js",
    "test": "MIGRATION_TYPE=all hardhat test",
    "coverage": "hardhat coverage",
    "verify": "./utils/verify.d",
    "start:local-fork": "./local-fork.sh"
  },
  "author": "Alessandro Bergamaschi",
  "license": "ISC",
  "devDependencies": {
    "@jarvis-network/core-utils": "*",
    "@jarvis-network/crypto-utils": "*",
    "@jarvis-network/sol2ts-code-gen": "*",
    "@jarvis-network/uma-common": "0.3.11",
    "@jarvis-network/uma-core": "0.3.11",
    "@openzeppelin/contracts": "3.3.0",
    "@typechain/web3-v1": "^1.0.0",
    "ganache-cli": "^6.12.1",
    "ganache-time-traveler": "^1.0.15",
    "secp256k1": "^4.0.2",
    "truffle": "5.1.49",
    "truffle-assertions": "^0.9.2",
    "typechain": "^4.0.1",
    "web3": "^1.3.5"
  }
}
