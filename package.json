{
  "name": "@jarvis/synthereum",
  "version": "1.1.0",
  "description": "Synthereum is Jarvis Network's synthetic asset protocol",
  "repository": "https://gitlab.com/jarvis-network/smart-contracts/synthereum",
  "author": "opz <will.shahda@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "install": "lerna bootstrap -- --ignore-optional",
    "format": "prettier --write '*/**/*.{js,jsx,ts,tsx}'",
    "build": "yarn build:client",
    "build:client": "lerna run --stream --include-dependencies --scope '@jarvis/synthereum-client' build",
    "build:client-new": "lerna run --stream --include-dependencies --scope '@jarvis/synthereum-client-new' build",
    "build:contracts": "lerna run --stream --include-dependencies --scope '@jarvis/synthereum-contracts' build",
    "build:balance-notify": "lerna run --stream --include-dependencies --scope '@jarvis/balance-notify' build",
    "start:client-new": "CI=true FORCE_COLOR=1 lerna run --stream --include-dependencies --scope '@jarvis/synthereum-client-new' start",
    "start:client": "CI=true FORCE_COLOR=1 lerna run --stream --include-dependencies --scope '@jarvis/synthereum-client' start",
    "start:bot": "docker-compose -f ./packages/keeper-bot/docker-compose.yml down && docker-compose -f ./packages/keeper-bot/docker-compose.yml build && docker-compose -f ./packages/keeper-bot/docker-compose.yml up",
    "start:balance-notify": "lerna run --stream --include-dependencies --scope '@jarvis/balance-notify' start",
    "verify": "lerna run --stream --include-dependencies --scope '@jarvis/synthereum-contracts' verify-contract:kovan"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@jarvis/synthereum-contracts/@openzeppelin/**"
    ]
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lerna": "^3.22.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  }
}
