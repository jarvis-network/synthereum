{
  "name": "@jarvis-network/synthereum",
  "version": "1.1.0",
  "packageManager": "yarn@3.1.1",
  "description": "Synthereum is Jarvis Network's synthetic asset protocol",
  "repository": "https://gitlab.com/jarvis-network/apps/exchange/mono-repo",
  "author": "Jarvis Network Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "yarn clean:build-artifacts-only",
    "clean:build-artifacts-only": "git clean -fdx -e .env -e .direnv -e node_modules -e hush -- . && rm -rf node_modules/.cache",
    "clean:node_modules": "git clean -fdx -e .env -e .direnv -e hush -- .",
    "clean:all": "git clean -fdx -e .env -e .env.local -e hush -- .",
    "nx": "nx",
    "start": "nx start",
    "start:cli": "./apps/cli/scripts/run.sh",
    "test": "nx test",
    "coverage": "nx coverage",
    "build": "sh -c 'nx build $1 --with-deps ${@:1}' --",
    "lint": "nx lint",
    "start:local-fork": "./scripts/local-fork.sh",
    "deploy:synthereum": "yarn workspace @jarvis-network/synthereum-contracts deploy",
    "add-pool": "yarn workspace @jarvis-network/synthereum-contracts add-pool",
    "migrate-pool": "yarn workspace @jarvis-network/synthereum-contracts migrate-pool",
    "add-selfMinting-derivative": "yarn workspace @jarvis-network/synthereum-contracts add-selfMinting-derivative",
    "add-fixedRateWrapper": "yarn workspace @jarvis-network/synthereum-contracts add-fixedRateWrapper",
    "add-debtToken": "yarn workspace @jarvis-network/synthereum-contracts add-debtToken",
    "deploy:atomic-swap": "yarn workspace @jarvis-network/atomic-swap deploy",
    "deploy:yield-farming-storage": "yarn workspace @jarvis-network/yield-farming deploy-storage",
    "deploy:yield-farming-staking": "yarn workspace @jarvis-network/yield-farming deploy-elysianfields",
    "verify:yield-farming": "yarn workspace @jarvis-network/yield-farming verify",
    "verify:synthereum": "yarn workspace @jarvis-network/synthereum-contracts verify",
    "verify:atomic-swap": "yarn workspace @jarvis-network/atomic-swap verify",
    "e2e": "nx e2e",
    "build:all": "nx run-many --target=build --all",
    "lint:all": "nx workspace-lint && nx run-many --target=lint --all",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:test": "nx affected:test",
    "affected:e2e": "nx affected:e2e",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "init:commitizen": "commitizen init @jarvisnetwork/cz-ccgls --yarn --dev --exact --force",
    "start:balance-notify": "lerna run --stream --include-dependencies --scope '@jarvis-network/balance-notify' start",
    "start:validator-old": "docker-compose -f ./packages/keeper-bot/docker-compose.yml down && docker-compose -f ./packages/keeper-bot/docker-compose.yml build && docker-compose -f ./packages/keeper-bot/docker-compose.yml up",
    "build:balance-notify": "lerna run --stream --include-dependencies --scope '@jarvis-network/balance-notify' build"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "resolutions": {
    "@openzeppelin/contracts": "4.3.2",
    "@truffle/hdwallet-provider": "^1.2.1",
    "@solidity-parser/parser": "0.13.2",
    "hardhat": "2.7.0",
    "sha3": "^2.1.4",
    "solidity-coverage": "^0.7.17",
    "typescript": "^4.5.2",
    "web3": "1.3.5",
    "web3-bzz": "1.3.5",
    "web3-core": "1.3.5",
    "web3-eth": "1.3.5",
    "web3-eth-abi": "1.3.5",
    "web3-eth-accounts": "1.3.5",
    "web3-eth-contract": "1.3.5",
    "web3-eth-ens": "1.3.5",
    "web3-eth-personal": "1.3.5",
    "web3-net": "1.3.5",
    "web3-shh": "1.3.5",
    "web3-utils": "1.3.5",
    "rxjs": "7.2.0"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "scripts/husky.sh",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "post-commit": "git update-index --again"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@jarvisnetwork/cz-ccgls"
    },
    "cz-ccgls": {
      "useEmojis": true,
      "additionalEmojis": [
        {
          "emoji": "üê≥",
          "code": ":whale:",
          "description": "Docker"
        },
        {
          "emoji": "üíß",
          "code": ":droplet:",
          "description": "Kubernetes"
        },
        {
          "emoji": "üíé",
          "code": ":gem:",
          "description": "Gem"
        },
        {
          "emoji": "üèπ",
          "code": ":bow_and_arrow:",
          "description": "Bow"
        }
      ],
      "scopes": [
        "gitlab",
        "core-utils",
        "sol2ts-code-gen",
        "contracts",
        "package.json",
        "docker",
        "k8s",
        "crypto-utils"
      ]
    }
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "document-register-element": "1.13.1",
    "dotenv": "^8.2.0",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "0.13.7",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.13",
    "@babel/preset-env": "7.12.13",
    "@babel/preset-typescript": "7.12.13",
    "@commitlint/config-conventional": "^11.0.0",
    "@emotion/babel-plugin": "11.2.0",
    "@jarvisnetwork/cz-ccgls": "0.3.3",
    "@nrwl/cli": "12.3.4",
    "@nrwl/cypress": "12.3.4",
    "@nrwl/jest": "12.3.4",
    "@nrwl/node": "12.3.4",
    "@nrwl/tao": "12.3.4",
    "@nrwl/workspace": "12.3.4",
    "@openzeppelin/contracts": "*",
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.2.14",
    "@types/chalk-pipe": "^2.0.0",
    "@types/jest": "^26.0.21",
    "@types/lodash": "^4.14.162",
    "@types/milliseconds": "^0.0.30",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.35",
    "@types/yargs": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "babel-jest": "26.2.2",
    "bip39": "^3.0.3",
    "chai": "^4.2.0",
    "chalk-pipe": "^4.0.0",
    "chokidar-cli": "^2.1.0",
    "commitizen": "^4.2.2",
    "commitlint": "^11.0.0",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-prettier-react": "^0.0.24",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ganache-cli": "^6.12.1",
    "ganache-time-traveler": "^1.0.15",
    "hardhat": "*",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "netlify-cli": "^3.37.31",
    "nodemon": "2.0.4",
    "prettier": "2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.16",
    "pretty-quick": "^3.1.0",
    "solidity-coverage": "*",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "*"
  }
}
