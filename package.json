{
  "name": "@jarvis-network/synthereum",
  "version": "1.1.0",
  "description": "Synthereum is Jarvis Network's synthetic asset protocol",
  "repository": "https://gitlab.com/jarvis-network/smart-contracts/synthereum",
  "author": "Jarvis Network Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "i": "lerna bootstrap -- --ignore-optional",
    "install": "yarn run i",

    "clean": "yarn clean:build-artifacts-only",
    "clean:build-artifacts-only": "git clean -fdx -e .env -e .direnv -e node_modules -e hush -- .",
    "clean:node_modules": "git clean -fdx -e .env -e .direnv -e hush -- .",
    "clean:all": "git clean -fdx -e .env -e hush -- .",

    "format": "prettier --write .",

    "start": "yarn start:frontend",
    "start:frontend": "lerna run --stream --include-dependencies --scope '@jarvis-network/exchange-frontend' start",
    "start:validator": "lerna run --stream --include-dependencies --scope '@jarvis-network/synthereum-validator' start",

    "start:frontend-old": "lerna run --stream --include-dependencies --scope '@jarvis-network/synthereum-old-frontend' start",
    "start:balance-notify": "lerna run --stream --include-dependencies --scope '@jarvis-network/balance-notify' start",
    "start:validator-old": "docker-compose -f ./packages/keeper-bot/docker-compose.yml down && docker-compose -f ./packages/keeper-bot/docker-compose.yml build && docker-compose -f ./packages/keeper-bot/docker-compose.yml up",

    "build": "echo 'Please review the README file for the correct command.'; exit 1",
    "build:all": "yarn build:frontend && yarn build:validator && yarn build:cli",
    "build:frontend": "lerna run --stream --include-dependencies --scope '@jarvis-network/exchange-frontend' build",
    "build:validator": "lerna run --stream --include-dependencies --scope '@jarvis-network/synthereum-validator' build",
    "build:contracts": "lerna run --stream --include-dependencies --scope '@jarvis-network/synthereum-contracts' build",
    "build:web3-utils": "lerna run --stream --include-dependencies --scope '@jarvis-network/web3-utils' build",
    "build:cli": "lerna run --stream --include-dependencies --scope '@jarvis-network/cli' build",

    "build:frontend-old": "lerna run --stream --include-dependencies --scope '@jarvis-network/synthereum-old-frontend' build",
    "build:balance-notify": "lerna run --stream --include-dependencies --scope '@jarvis-network/balance-notify' build",

    "verify-contracts:kovan": "lerna run --stream --include-dependencies --scope '@jarvis-network/synthereum-contracts' verify-contract:kovan"
  },
  "workspaces": {
    "packages": [
      "packages/frontend-old",
      "apps/*",
      "libs/*",
      "libs/*/dist"
    ],
    "nohoist": [
      "@jarvis-network/synthereum-contracts/@openzeppelin/**"
    ]
  },
  "resolutions": {
    "**/@umaprotocol/truffle-ledger-provider": "npm:@jarvis-network/ledger-web3-provider"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.0",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-beta.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  }
}
